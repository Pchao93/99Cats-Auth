Sign Up!
<br>

<% if flash.now[:errors] %>
  <% flash.now[:errors].each do |error| %>
    <%= error %>
  <% end %>
<% end %>



<form action="<%= users_url %>" method="post">
  <input
  type="hidden"
  name="authenticity_token"
  value="<%= form_authenticity_token %>">
  Username
  <input
  type="text"
  name="user[username]"
  value="<%= @user.username %>">
  <br>
  Password
  <input
  type="password"
  name="user[password]"
  value="<%= @user.password %>">
  <br>

  <input type="submit">

</form>
