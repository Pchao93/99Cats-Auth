<style>
.hide-on-sign-in {
  display: none;
}
</style>

<br>

<% if flash[:errors] %>
  <% flash[:errors].each do |error| %>
    <%= error %>
  <% end %>
<% end %>

<form action="<%= session_url %>" method="post">
  <input
  type="hidden"
  name="authenticity_token"
  value="<%= form_authenticity_token %>">

  Username
  <input
  type="text"
  name="session[username]"
  value="<%= @user.username %>">
  <br>
  Password
  <input
  type="password"
  name="session[password]"
  value="<%= @user.password %>">
  <br>

  <input type="submit" value="sign in">

</form>
